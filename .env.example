# SensusAI Environment Variables
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_USER=sensus_user
POSTGRES_PASSWORD=change_this_in_production
POSTGRES_DB=sensus_alerts
DB_HOST=postgresql
DB_PORT=5432

# Redis Configuration
REDIS_ADDR=redis:6379
REDIS_URL=redis://redis:6379

# Ollama Configuration
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_URL=http://ollama:11434

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=change_this_in_production

# JWT Authentication
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=change_this_to_a_long_random_string_in_production

# Application Settings
GIN_MODE=release
PYTHONOPTIMIZE=1

# Monitoring
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=true
ENABLE_MODEL_RETRAINING=true
